<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\base.targets" />
  
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <Version>1.0.0-preview5</Version>
    <AssemblyVersion>1.0.0</AssemblyVersion>
    <FileVersion>1.0.0</FileVersion>
    <Description>
      Utilities to run `Task` and `Task{TResult}` synchronously and more.
      Beware, synchronization does not prevent ThreadPool Starvation, nor does it prevent Tasks Deadlocks.
    </Description>
    <PackageTags>RoyalCode Task Synchronously</PackageTags>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.ObjectPool" Version="5.0.7" />
  </ItemGroup>

</Project>
